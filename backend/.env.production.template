# ==============================================================
# PRODUCTION ENVIRONMENT TEMPLATE
# ==============================================================
# DO NOT COMMIT THIS FILE WITH REAL VALUES!
# Copy this to .env and fill in production values.
# ==============================================================

# Server Configuration
NODE_ENV=production
PORT=3001

# Database Configuration (Railway/AWS RDS/etc)
# Get this from your hosting provider
DATABASE_URL=postgresql://username:password@host:5432/database_name
DATABASE_HOST=your-db-host.railway.app
DATABASE_PORT=5432
DATABASE_NAME=raffle_db
DATABASE_USER=your_db_user
DATABASE_PASSWORD=your_secure_password

# JWT Configuration - GENERATE SECURE KEYS!
# Run: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=GENERATE_A_64_CHARACTER_RANDOM_STRING_HERE
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_SECRET=GENERATE_ANOTHER_64_CHARACTER_RANDOM_STRING_HERE
REFRESH_TOKEN_EXPIRES_IN=30d

# Frontend URL (for CORS and email links)
FRONTEND_URL=https://yourdomain.com

# Stripe Configuration (LIVE keys for production!)
# Get from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_live_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
STRIPE_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Email Configuration - Gmail SMTP
EMAIL_PROVIDER=smtp
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
EMAIL_FROM=your-email@gmail.com
EMAIL_FROM_NAME=Your Competition Platform

# File Storage (for image uploads)
# Option 1: Cloudinary (recommended)
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Option 2: AWS S3
STORAGE_PROVIDER=s3
STORAGE_BUCKET=your-bucket-name
STORAGE_REGION=eu-west-1
STORAGE_ACCESS_KEY=AKIA_xxxxxxxxxxxx
STORAGE_SECRET_KEY=your_secret_key

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100

# Error Tracking (Optional but recommended)
SENTRY_DSN=https://xxxxx@sentry.io/xxxxx
